; Test list fold operations

"../lib/list.froth" import

; Build a list [1, 2, 3]
. 3 , 2 , 1 , /xs

; lfoldl with print - should print 1 2 3
xs {print " " print} lfoldl!
nl!

; lfoldr with print - should print 3 2 1
xs {print " " print} lfoldr!
nl!

; lfoldl with transform, collect into array
[ xs {1 +} lfoldl! ] println!

; lfoldr with transform, collect into array
[ xs {1 +} lfoldr! ] println!

; lfoldl to sum elements
0 xs {+} lfoldl! println!

; Empty list lfoldl - should do nothing
. {println!} lfoldl!

; Empty list lfoldr - should do nothing
. {println!} lfoldr!

; lreverse list [1, 2, 3] to [3, 2, 1]
xs lreverse! {print " " print} lfoldl!
nl!

; lreverse empty list
. lreverse! isNil println!

"done" println!
