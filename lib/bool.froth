; lib/bool.froth
; Boolean operations (0 = true, non-zero = false)

; not: (a -- bool)
; Returns 0 (true) if a is not zero or not an integer
; Returns 1 (false) if a is zero
[] { /a
  a isInt {
    a 0 = 1 0 ?
  } {
    0
  } ?!
} def-fn! /not

; and: (a b -- bool)
; Returns 0 (true) if both a and b are 0
[] { /b /a
  a { b } { 1 } ?!
} def-fn! /and

; or: (a b -- bool)
; Returns 0 (true) if either a or b is 0
[] { /b /a
  a { 0 } { b } ?!
} def-fn! /or
